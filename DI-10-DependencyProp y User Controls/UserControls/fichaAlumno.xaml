<UserControl
    x:Class="DI_10_DependencyProp_y_User_Controls.UserControls.fichaAlumno"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DI_10_DependencyProp_y_User_Controls.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Name="UserControl"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <StackPanel Orientation="Vertical">
        <Image Name="Perfil" Source="{Binding ElementName=UserControl,Path=Imagen}" Width="auto" Height="auto"></Image>
        <TextBlock Name="tblNombre" Text="{Binding ElementName=UserControl ,Path=Nombre}"></TextBlock>
        <TextBlock Name="tblEdad" Text="{Binding ElementName=UserControl ,Path=Edad}"></TextBlock>
    </StackPanel>
</UserControl>
